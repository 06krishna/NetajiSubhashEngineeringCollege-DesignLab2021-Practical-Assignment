<h1>{{title}}</h1>
<p>Welcome to the {{title}}</p>
<div class="row">
    <div class="col">
        <div class="pull-left">
        <a href="/" class="btn btn-primary" >Home</a>
        </div>
</div>
<div class="col">
        <a href="/" class="btn btn-primary" class="dropdown-toggle" data-toggle="dropdown">Cart
            {{# if session.cart.totalItems }}
            <span>({{session.cart.totalItems}})</span>
            {{/if}}
        </a>
        {{# if session.cart.totalItems }}
        <div class="dropdown-menu">
            <div class="cart">
                {{# each session.cart.items }}
                <div class="row">
                    <div class="col-xs-4">
                        {{ this.item.title }}
                    </div>
                    <div class="col-xs-4 text-right">
                       <span class="badge">{{ this.quantity }}</span>
                    </div>
                    <div class="col-xs-4 text-right">
                        {{ this.price }} rs
                    </div>
                </div>
                {{/each}}
                    <div class="row">
                        <div class="text-right">
                            <div class="totalPrice">Total: {{ session.cart.totalPrice }} rs</div>
                            <a href="/cart/" class="btn btn-primary">Procceed</a>
                        </div>
                    </div>
                </div>
            </div>
            {{/if}}
        </div>
    </div>
</div>